<idea-plugin>
  <id>com.your.company.unique.plugin.id</id>
  <name>searchingOnInternet</name>
  <version>1.0</version>
  <vendor email="juliazenovskaya@gmail.com" url="https://github.com/JuliaZenovskaya/PlugginForSearchingInInternet">JuliaZenovskaya</vendor>

  <description>Now you can search everything on your favourite sites</description>
  <idea-version since-build="173.0"/>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="MakeSearching" class="MakeSearching" text="MakeSearching" description="Make searching on choosen site"/>
    <group id="Useless.MakeSearching">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
      <action id="Useless.MakeSearching.Action" class="MakeSearching" text="Search"/>
    </group>
  </actions>

</idea-plugin>